<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ preview or site.description }}">
    <title>{{ site.title }} {{ 'â€“ ' + title if page.url != '/' }}</title>
    <link rel="stylesheet" href="/css/style.min.css">
    <link rel="manifest" href="/manifest.json">
    <link rel="preload" href="/fonts/oswaldmedium.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/oswaldregular.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="icon" type="image/png" sizes="160x160" href="/img/favicons/favicon-160.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicons/favicon-32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/favicons/favicon-16.png">
    <link rel="icon" type="image/svg+xml" sizes="any" href="/img/favicons/favicon.svg">
    <script defer src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</head>
<body>
    {% include "header.njk" %}

    <main class="page-main">
        <div class="page-main__inner">
            {{ content | safe }}
        </div>
    </main>

    {% include "footer.njk" %}

    <script src="/js/script.js"></script>
    <script>
        if (window.netlifyIdentity) {
            window.netlifyIdentity.on("init", user => {
            if (!user) {
                window.netlifyIdentity.on("login", () => {
                document.location.href = "/admin/";
                });
            }
            });
        }
    </script>
</body>
</html>
